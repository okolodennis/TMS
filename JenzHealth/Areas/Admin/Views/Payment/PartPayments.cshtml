@using WebApp.DAL.Entity;
@model WebApp.Areas.Admin.ViewModels.PartPaymentVM
@{
    ViewBag.Title = "Part Payments";
}
<!-- Page Header -->
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-11 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Account management</span>
        <h3 class="page-title">Part Payments</h3>
    </div>
    <div class="btn-group btn-group-sm" role="group" aria-label="Table row actions">
        <button type="button" id="close" class="btn btn-white fa-pull-right" title="Click to close all">close</button>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card card-small mb-4">
            <div class="card-header">

                <div class="m-0">
                    <div class="row">
                        <div class="form-group col-md-8">
                            <label for="socialGitHub">Search by:</label>
                            <div class="input-group input-group-seamless">
                                @Html.EditorFor(model => model.BillInvoiceNumber, new { htmlAttributes = new { @class = "form-control BillNumberAutoComplete", autocomplete = "off", placeholder = "Enter Invoice Number", id = "Searchby", required = true } })
                                <div class="invalid-feedback">
                                    Invoice Number required
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="socialGitHub">-</label>
                            <div class="input-group input-group-seamless">
                                <button class="btn btn-primary" id="Search">
                                    Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <fieldset>
                <legend class="text-center">Customer Information</legend>
                <div id="customerInfoLoader" style="display:none" class="col text-center">
                    <img src="~/Content/images/Spinner.gif" style="width:50px;height:50px" />
                </div>
                <div id="customerinfoDiv">
                    <table class="file-manager file-manager-list2 d-none table-responsive">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">Name</th>
                                <th scope="col" class="border-0">Gender</th>
                                <th scope="col" class="border-0">Age</th>
                                <th scope="col" class="border-0">Phone number</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td id="Customername"></td>
                                <td id="Customergender"></td>
                                <td id="Customerage"></td>
                                <td id="Customerphonenumber"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </fieldset>

        </div>
        <div class="card card-small mb-4">
            <div class="card-body p-0 pb-3 text-center">
                <div id="ServiceTableLoader" style="display:none" class="col text-center">
                    <img src="~/Content/images/Spinner.gif" style="width:50px;height:50px" />
                </div>
                <div id="serviceTableDiv">
                    <table class="file-manager file-manager-list2 d-none table-responsive">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">Service</th>
                                <th scope="col" class="border-0">Quantity</th>
                                <th scope="col" class="border-0">Price (₦)</th>
                                <th scope="col" class="border-0">Gross Amount (₦)</th>
                            </tr>
                        </thead>
                        <tbody id="ServiceBody">
                        </tbody>
                        <tfoot style="border-top: 2px solid black; border-bottom: 2px solid black;background-color:#dcdfe1" class="text-center">
                            <tr>
                                <th colspan="2"></th>
                                <th> Net Amount (₦)</th>
                                <td id="NetAmount">₦0.00</td>
                            </tr>
                            <tr>
                                <th colspan="2"></th>
                                <th>Waived Amount (₦)</th>
                                <td id="WaiveAmount">₦0.00</td>
                            </tr>
                            <tr>
                                <th colspan="2"></th>
                                <th> Amount To Pay (₦)</th>
                                <td id="BalanceAmount">₦0.00</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <div class="m-0">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="installmentAmountField">Amount</label>
                            <div class="input-group input-group-seamless">
                                <input type="text" class="form-control currency" id="installmentAmountField" />
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="AddInstallment">-</label>
                            <div class="input-group input-group-seamless">
                                <button class="btn btn-primary" id="AddInstallment">
                                    Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0 pb-3 text-center">
                <div id="InstallmentTableLoader" style="display:none" class="col text-center">
                    <img src="~/Content/images/Spinner.gif" style="width:50px;height:50px" />
                </div>
                <div id="InstallmentTableDiv">
                    <table class="file-manager file-manager-list2 d-none table-responsive">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0"></th>
                                <th scope="col" class="border-0">Installment</th>
                                <th scope="col" class="border-0">Amount (₦)</th>
                            </tr>
                        </thead>
                        <tbody id="InstallmentBody">
                        </tbody>
                        <tfoot style="border-top: 2px solid black; border-bottom: 2px solid black">
                            <tr>
                                <th colspan="2"> Installment Net Amount (₦)</th>
                                <td id="InstallmentNetAmount">₦0.00</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <hr />
                <div class="col-md-12">
                    <button class="btn btn-primary" id="FinishBtn">
                        Save
                    </button>
                </div>
            </div>

        </div>

    </div>
</div>
@section Scripts{
    <script src="~/Scripts/jquery.autocomplete.js"></script>
    <script src="~/Areas/Admin/Scripts/PartPayments.js"></script>
}
