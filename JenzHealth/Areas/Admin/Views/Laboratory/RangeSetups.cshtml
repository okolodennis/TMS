@using WebApp.DAL.Entity;
@model WebApp.Areas.Admin.ViewModels.ServiceParameterVM
@{
    ViewBag.Title = "Manage Parameter Setups";
}
<!-- Page Header -->
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Laboratory management</span>
        <h3 class="page-title">Manage Parameter Ranges</h3>
    </div>
    <div class="col-12 col-sm-4 d-flex align-items-center">
        <div class="btn-group btn-group-sm btn-group-toggle d-inline-flex mb-4 mb-sm-0 mx-auto" role="group" aria-label="Page actions">
            <a href="~/Admin/Laboratory/ParameterSetups" class="btn btn-white"> Parameter setup </a>
            <a href="~/Admin/Laboratory/RangeSetups" class="btn btn-white active"> Range setup </a>
        </div>
    </div>
    <div class="btn-group btn-group-sm" role="group" aria-label="Table row actions">
        <button type="button" id="close" class="btn btn-white fa-pull-right" title="Click to close all">close</button>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card card-small mb-4">
            <div class="card-header">

                <div class="m-0">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="socialGitHub">Service</label>
                            <div class="input-group input-group-seamless">
                                @Html.EditorFor(model => model.Service, new { htmlAttributes = new { @class = "form-control", placeholder = "Search service", required = true } })
                                <div class="invalid-feedback">
                                    Service required
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <div class="card-header border-bottom">
                <div class="m-0">
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label for="socialGitHub">Parameter</label>
                            <div class="input-group input-group-seamless">
                                <select id="Parameter" class="form-control">
                                    <option> -- Select --</option>
                                </select>
                                <div class="invalid-feedback">
                                    Parameter required
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            <label for="ParameterField">Range</label>
                            <div class="input-group input-group-seamless">
                                <input type="text" class="form-control" id="RangeField" />
                                <div class="invalid-feedback">
                                    Range required
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="RankField">Unit</label>
                            <div class="input-group input-group-seamless">
                                <input type="text" class="form-control" id="UnitField" />
                                <div class="invalid-feedback">
                                    Unit required
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="AddRange">-</label>
                            <div class="input-group input-group-seamless">
                                <button class="btn btn-primary" id="AddRange">
                                    Add range
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0 pb-3 text-center">
                <div id="RangeTableLoader" style="display:none" class="col text-center">
                    <img src="~/Content/images/Spinner.gif" style="width:50px;height:50px" />
                </div>
                <div id="RangeTableDiv">
                    <table class="file-manager file-manager-list2 d-none table-responsive">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0"></th>
                                <th scope="col" class="border-0">Parameter</th>
                                <th scope="col" class="border-0">Range</th>
                                <th scope="col" class="border-0">Unit</th>
                            </tr>
                        </thead>
                        <tbody id="RangeBody">
                        </tbody>
                    </table>
                </div>
                <hr />
                <div class="col-md-12">
                    <button class="btn btn-primary" id="FinishBtn">
                        Save
                    </button>
                </div>
            </div>

        </div>

</div>
@section Scripts{
    <script src="~/Areas/Admin/Scripts/ServiceParameterRangeSetup.js"></script>
}
