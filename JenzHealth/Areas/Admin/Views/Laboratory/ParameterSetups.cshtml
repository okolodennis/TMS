@using WebApp.DAL.Entity;
@model WebApp.Areas.Admin.ViewModels.ServiceParameterVM
@{
    ViewBag.Title = "Manage Parameter Setups";
}
<!-- Page Header -->
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Laboratory management</span>
        <h3 class="page-title">Manage Service Parameters</h3>
    </div>
    <div class="col-12 col-sm-4 d-flex align-items-center">
        <div class="btn-group btn-group-sm btn-group-toggle d-inline-flex mb-4 mb-sm-0 mx-auto" role="group" aria-label="Page actions">
            <a href="~/Admin/Laboratory/ParameterSetups" class="btn btn-white active"> Parameter setup </a>
            <a href="~/Admin/Laboratory/RangeSetups" class="btn btn-white"> Range setup </a>
        </div>
    </div>
    <div class="btn-group btn-group-sm" role="group" aria-label="Table row actions">
        <button type="button" id="close" class="btn btn-white fa-pull-right" title="Click to close all">close</button>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card card-small mb-4">
            <div class="card-header">
                <div class="m-0">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="socialGitHub">Service</label>
                            <div class="input-group input-group-seamless">
                                @Html.EditorFor(model => model.Service, new { htmlAttributes = new { @class = "form-control", placeholder = "Search service", required = true } })
                                <div class="invalid-feedback">
                                    Service required
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="socialGitHub">Specimen</label>
                            <div class="input-group input-group-seamless">
                                @Html.EditorFor(model => model.Specimen, new { htmlAttributes = new { @class = "form-control", placeholder = "Search Specimen", required = true } })
                                <div class="invalid-feedback">
                                    Specimen required
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="socialGitHub">Template</label>
                            <div class="input-group input-group-seamless">
                                @Html.EditorFor(model => model.Template, new { htmlAttributes = new { @class = "form-control", placeholder = "Search Template", required = true } })
                                <div class="invalid-feedback">
                                    Template required
                                </div>
                            </div>
                        </div>
                        <div class="form-row mx-4">
                            <label for="conversationsEmailsToggle" class="col col-form-label">
                                Require Approval? <small class="form-text text-muted"> If check, parameter must go through verificaion </small>
                            </label>
                            <div class="col d-flex">
                                <div class="custom-control custom-toggle ml-auto my-auto">
                                    @Html.CheckBoxFor(model => model.RequireApproval, new { @class = "custom-control-input", id = "newProjectsEmailsToggle" })
                                    <label class="custom-control-label" for="newProjectsEmailsToggle"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-header border-bottom">
            <div class="m-0">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="ParameterField">Parameter Name</label>
                        <div class="input-group input-group-seamless">
                            <input type="text" class="form-control" id="ParameterField" />
                            <div class="invalid-feedback">
                                Paremeter name required
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="RankField">Rank</label>
                        <div class="input-group input-group-seamless">
                            <input type="number" class="form-control" id="RankField" />
                            <div class="invalid-feedback">
                                Rank required
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="AddParameter">-</label>
                        <div class="input-group input-group-seamless">
                            <button class="btn btn-primary" id="AddParameter">
                                Add parameter
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0 pb-3 text-center">
            <div id="ParameterTableLoader" style="display:none" class="col text-center">
                <img src="~/Content/images/Spinner.gif" style="width:50px;height:50px" />
            </div>
            <div id="ParamterTableDiv">
                <table class="file-manager file-manager-list2 d-none table-responsive">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="border-0"></th>
                            <th scope="col" class="border-0">Parameter Name</th>
                            <th scope="col" class="border-0">Rank</th>
                        </tr>
                    </thead>
                    <tbody id="ParameterBody">
                    </tbody>
                </table>
            </div>
            <hr />
            <div class="col-md-12">
                <button class="btn btn-primary" id="FinishBtn">
                    Save
                </button>
            </div>
        </div>

    </div>

</div>
@section Scripts{
    <script src="~/Areas/Admin/Scripts/ServiceParameterSetup.js"></script>
}
