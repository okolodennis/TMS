@model WebApp.Areas.Admin.ViewModels.ServiceVM
<div class="modal fade" id="Edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Service</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("EditService", "Seed", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <div class="modal-body">
                    <div class="form-group col-md-12">
                        <label for="socialGitHub">Service Department</label>
                        <div class="input-group input-group-seamless">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="material-icons">bloodtype</i>
                                </div>
                            </div>
                            @Html.DropDownListFor(model => model.ServiceDepartmentID, (IEnumerable<SelectListItem>)ViewBag.ServiceDepartments, "-- Select service department --", new { @class = "form-control", required = true })
                            <div class="invalid-feedback">
                                Service department required
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="socialGitHub">Revenue Department</label>
                        <div class="input-group input-group-seamless">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="material-icons">bloodtype</i>
                                </div>
                            </div>
                            @Html.DropDownListFor(model => model.RevenueDepartmentID, (IEnumerable<SelectListItem>)ViewBag.RevenueDepartments, "-- Select revenue department --", new { @class = "form-control", required = true })
                            <div class="invalid-feedback">
                                Revenue department required
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="socialGitHub">Description</label>
                        <div class="input-group input-group-seamless">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="material-icons">bloodtype</i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name", required = true } })
                            <div class="invalid-feedback">
                                Description required
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="socialGitHub">Cost Price</label>
                        <div class="input-group input-group-seamless">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="material-icons">bloodtype</i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.CostPriceString, new { htmlAttributes = new { @class = "form-control currency", placeholder = "", required = true } })
                            <div class="invalid-feedback">
                                Cost price required
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="socialGitHub">Selling Price</label>
                        <div class="input-group input-group-seamless">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="material-icons">bloodtype</i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.SellingPriceString, new { htmlAttributes = new { @class = "form-control currency", placeholder = "", required = true } })
                            <div class="invalid-feedback">
                                Selling price required
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="ladda-button btn btn-shadow btn-primary" data-style="zoom-in">
                        <span class="ladda-label">Update</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>



