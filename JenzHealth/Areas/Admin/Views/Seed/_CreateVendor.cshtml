@model WebApp.Areas.Admin.ViewModels.VendorVM
<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Vendor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CreateVendor", "Seed", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true }))
            {
                @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-group col-md-12">
                <label for="socialGitHub">Name</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name", required = true } })
                    <div class="invalid-feedback">
                        Name required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Company Registration Number</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.CompanyRegistrationNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter company registration number", required = true } })
                    <div class="invalid-feedback">
                        Company Registration Number required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Office Address</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.OfficeAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter office address", required = true } })
                    <div class="invalid-feedback">
                        Office address required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Phone number</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter phone number", required = true } })
                    <div class="invalid-feedback">
                        Phone number required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Email address</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter email address", required = true } })
                    <div class="invalid-feedback">
                        Email required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Postal address</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.PostalAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter postal address", required = true } })
                    <div class="invalid-feedback">
                        Postal address required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Website</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter website", required = true } })
                    <div class="invalid-feedback">
                        Website required
                    </div>
                </div>
            </div>
        </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="ladda-button btn btn-shadow btn-primary" data-style="zoom-in">
                        <span class="ladda-label">Create</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>



