@model WebApp.Areas.Admin.ViewModels.TemplateVM
<div class="modal fade" id="Edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Template</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("EditTemplate", "Seed", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <div class="modal-body">
                    <div class="form-group col-md-12">
                        <label for="socialGitHub">Service Department</label>
                        <div class="input-group input-group-seamless">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="material-icons">bloodtype</i>
                                </div>
                            </div>
                            @Html.DropDownListFor(model => model.ServiceDepartmentID, (IEnumerable<SelectListItem>)ViewBag.ServiceDepartments, "-- Select service department --", new { @class = "form-control", required = true })
                            <div class="invalid-feedback">
                                Service department required
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="socialGitHub">Name</label>
                        <div class="input-group input-group-seamless">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="material-icons">bloodtype</i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name", required = true } })
                            <div class="invalid-feedback">
                                Name required
                            </div>
                        </div>
                    </div>
                    <div class="form-row mx-4">
                        <label for="conversationsEmailsToggle" class="col col-form-label">
                            Use Default Parameters? <small class="form-text text-muted"> If check, parameters are defined statically </small>
                        </label>
                        <div class="col d-flex">
                            <div class="custom-control custom-toggle ml-auto my-auto">
                                @Html.CheckBoxFor(model => model.UseDefaultParameters, new { @class = "custom-control-input", id = "newProjectsEmailsToggle" })
                                <label class="custom-control-label" for="newProjectsEmailsToggle"></label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="ladda-button btn btn-shadow btn-primary" data-style="zoom-in">
                        <span class="ladda-label">Update changes</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>



