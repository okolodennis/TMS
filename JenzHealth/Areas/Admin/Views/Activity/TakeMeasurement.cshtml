@using WebApp.DAL.Entity;
@model WebApp.Areas.Admin.ViewModels.MeasurementSetupVM
@{
    ViewBag.Title = "Take Measurement";
}
<!-- Page Header -->
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-11 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Activity management</span>
        <h3 class="page-title">Take Measurement</h3>
    </div>
    <div class="btn-group btn-group-sm" role="group" aria-label="Table row actions">
        <button type="button" id="close" class="btn btn-white fa-pull-right" title="Click to close all">close</button>
    </div>
</div>
@using (Html.BeginForm("TakeMeasurement", "Activity", FormMethod.Post, new { area = "Admin", @class = "validate", id = "WaiverForm", novalidate = true }))
{
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4">
                <div class="card-header">
                    <div class="m-0">
                        <div class="row">
                            <div class="form-group col-md-8">
                                <label for="socialGitHub">Bill Number</label>
                                <div class="input-group input-group-seamless">
                                    @Html.EditorFor(model => model.BillNumber, new { htmlAttributes = new { @class = "form-control BillNumberAutoComplete", placeholder = "Enter bill number", autocomplete = "off", required = true } })
                                    <div class="invalid-feedback">
                                        Bill number required
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-2">
                                <label for="Search">-</label>
                                <div class="input-group input-group-seamless">
                                    <button class="btn btn-primary" type="submit">
                                        Take measurements
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts{
    <script src="~/Scripts/jquery.autocomplete.js"></script>
}
