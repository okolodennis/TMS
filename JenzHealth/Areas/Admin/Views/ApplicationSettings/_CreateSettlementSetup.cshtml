@model WebApp.Areas.Admin.ViewModels.SettlementSetupVM
<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Settlement Steup</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CreateSettlementSetup", "ApplicationSettings", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true }))
            {
                @Html.AntiForgeryToken()
        <div class="modal-body">

            <div class="form-group col-md-12">
                <label for="socialGitHub">Tailor</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.DropDownListFor(model => model.TailorIDCreate, (IEnumerable<SelectListItem>)ViewBag.Tailor, "-- Select Tailor --", new { @class = "form-control", required = true, onchange = "CheckIfSettlementSetupExist()" })
                    <div class="invalid-feedback">
                        Tailor required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Cloth Type</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.DropDownListFor(model => model.ClothTypeIDCreate, (IEnumerable<SelectListItem>)ViewBag.ClothType, "-- Select Cloth Type --", new { @class = "form-control", required = true, onchange = "CheckIfSettlementSetupExist()" })
                    <div class="invalid-feedback">
                        Cloth Type required
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label for="socialGitHub">Partner Percentage</label>
                <div class="input-group input-group-seamless">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons">bloodtype</i>
                        </div>
                    </div>
                    @Html.EditorFor(model => model.PartnerPercent, new { htmlAttributes = new { @class = "form-control", placeholder = "Example => 10", required = true } })
                    <div class="invalid-feedback">
                        Partner Percentage required
                    </div>
                </div>
            </div>

            <div style="margin-top: 7px;" id="Message"></div>
        </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnSubmit" class="ladda-button btn btn-shadow btn-primary" data-style="zoom-in">
                        <span class="ladda-label">Create</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>



